<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.koreait.project1214.domain.News">

	<!-- 명시하지 않았어도 레코드가 2건이상 될 때는 내부적으로 List가 생성된다  -->

	<insert id ="insert" parameterType="com.koreait.project1214.domain.News">
		insert into news(title,writer,content) values(#{title},#{writer},#{content})
	</insert>
	
	<select id="select" parameterType="int" resultType ="com.koreait.project1214.domain.News">
		select * from news where news_id =#{news_id}
	</select>
	
	<update id="update" parameterType="com.koreait.project1214.domain.News"  >
		update news set title=#{title},writer=#{writer},content=#{content} where news_id=#{news_id}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from news where news_id = #{news_id}
	</delete>
	
	<select id="selectAll" resultType="com.koreait.project1214.domain.News">
		select n.news_id as news_id ,title ,writer ,regdate ,hit ,count(c.news_id) as cnt
		from news n left outer join comments c 
		on n.news_id = c.news_id 
		group  by title,writer ,regdate ,hit 
	</select>
</mapper>